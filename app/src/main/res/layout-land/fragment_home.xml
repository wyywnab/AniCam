<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Material3.Toolbar.Surface"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal"
            android:id="@+id/lib_bar"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:background="?attr/colorSurfaceContainerHigh">
            <TextView
                android:id="@+id/lib_bar_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/ui_homeLib"
                android:textSize="18sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addLib_button"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/transparent_60"
                app:icon="@drawable/create_new_folder_24px"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3Expressive.Button.TonalButton" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/importLibFolder_button"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/transparent_60"
                app:icon="@drawable/place_item_24px"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3Expressive.Button.TonalButton" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/switchLibSortMode_button"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/transparent_60"
                app:icon="@drawable/reorder_24px"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                style="@style/Widget.Material3Expressive.Button.TonalButton" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lib_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/lib_bar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal"
            android:id="@+id/pic_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?attr/colorSurfaceContainerHigh">
            <TextView
                android:id="@+id/pic_bar_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:text="@string/ui_homePic"
                android:textSize="18sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addPic_button"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/transparent_60"
                app:icon="@drawable/add_photo_alternate_24px"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3Expressive.Button.TonalButton" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addPicFromFolder_button"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/transparent_60"
                app:icon="@drawable/place_item_24px"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3Expressive.Button.TonalButton" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/switchPicSortMode_button"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/transparent_60"
                app:icon="@drawable/reorder_24px"
                app:iconSize="24dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                style="@style/Widget.Material3Expressive.Button.TonalButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/pic_sub"
            app:layout_constraintTop_toBottomOf="@id/pic_bar"
            android:background="?attr/colorSurfaceContainerLow">
            <TextView
                android:id="@+id/pic_sub_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/ui_notSelected" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pic_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/pic_sub"
            app:layout_constraintBottom_toTopOf="@+id/blank1"/>

        <Space
            android:id="@+id/blank1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>